<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

  <navigation-rule>
      <from-view-id>/pages/register.xhtml</from-view-id>

      <navigation-case>
          <from-action>#{register.createDealer}</from-action>
          <if>#{register.isCreated == true}</if>
          <to-view-id>/pages/success.html</to-view-id>
      </navigation-case>

      <navigation-case>
          <from-action>#{register.createDealer}</from-action>
          <if>#{register.isCreated == false}</if>
          <to-view-id>/pages/failed_registration.xhtml</to-view-id>
      </navigation-case>
  </navigation-rule>


    <navigation-rule>
        <from-view-id>/pages/login.xhtml</from-view-id>

        <navigation-case>
            <from-action>#{login.checkLogIn}</from-action>
            <if>#{login.requestCode == 200}</if>
            <to-view-id>/pages/success.html</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{login.checkLogIn}</from-action>
            <if>#{login.requestCode == 404}</if>
            <to-view-id>/pages/not_found.html</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{login.checkLogIn}</from-action>
            <if>#{login.requestCode == 401}</if>
            <to-view-id>/pages/unauthorized.html</to-view-id>
        </navigation-case>

    </navigation-rule>


</faces-config>